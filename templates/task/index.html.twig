{% extends 'base.html.twig' %}

{% block title %}Task List{% endblock %}

{% block body %}
<h1>Task List</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.titre }}</td>
                <td>{{ task.statut }}</td>
                <td>
                    <a href="{{ path('app_task_show', { id: task.id }) }}">View</a>
                    <a href="{{ path('app_task_edit', { id: task.id }) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<a href="{{ path('app_task_new') }}">Create New Task</a>
{% endblock %}
