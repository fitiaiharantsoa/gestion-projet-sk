{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
<h1>User List</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Prenom</th>
            <th>Nom</th>
            <th>Rôles</th>
            <th>Vérifié</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('user_profile', { id: user.id }) }}">Voir</a>
                    <a href="{{ path('user_edit', { id: user.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('user_new') }}" class="btn btn-primary">Créer un nouvel utilisateur</a>
{% endblock %}
